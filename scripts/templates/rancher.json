{
  "ignition": {
    "version": "2.1.0"
  },
  "passwd": {
    "users": [{
      "name": "core",
      "sshAuthorizedKeys": [
        "$ESXI_DEPLOY_SSH"
      ]
    }]
  },
  "storage": {
    "files": [{
      "filesystem": "root",
      "path": "/etc/hostname",
      "mode": 420,
      "contents": {
        "source": "data:,$VM_NAME.$VM_DOMAIN"
      }
    }]
  },
  "systemd": {
    "units": [{
      "mask": true,
      "name": "update-engine.service"
    }, {
      "mask": true,
      "name": "locksmithd.service"
    }]
  }
}